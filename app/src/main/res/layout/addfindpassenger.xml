<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <android.support.v7.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="?attr/actionBarSize"
        android:background="#0066ff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要載人"
        android:id="@+id/findDriver_tv"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="15dp" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/background_iv"
        android:layout_below="@+id/toolBar"
        android:padding="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolBar">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="34dp"
            android:id="@+id/from_icon"
            android:src="@drawable/from"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp" />
        <EditText
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:id="@+id/from_et"
            android:layout_marginLeft="10sp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:hint="請輸入出發地"
            android:textColorHint="#808080"
            android:layout_marginTop="38sp"
            android:clickable="false"
            android:singleLine="true"
            android:visibility="visible"
            android:background="@drawable/line2"
            android:maxLength="20" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout_to"
        android:layout_below="@+id/linearLayout_from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:id="@+id/to_icon"
            android:src="@drawable/to"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp" />
        <EditText
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:id="@+id/to_et"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:textColorHint="#808080"
            android:hint="請輸入目的地"
            android:clickable="false"
            android:singleLine="true"
            android:visibility="visible"
            android:background="@drawable/line2"
            android:layout_marginBottom="3dp"
            android:maxLength="20" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSendClick"
        android:layout_below="@+id/linearLayout_to"
        android:weightSum="1"
        android:layout_marginTop="3dp">
        <ImageView
            android:layout_width="41dp"
            android:layout_height="28dp"
            android:id="@+id/date_icon"
            android:src="@drawable/date"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_tv"
            android:layout_marginLeft="10dp"
            android:text="選擇日期"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:textColor="#1a1a1a"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="41dp"
            android:layout_height="28dp"
            android:id="@+id/time_icon"
            android:src="@drawable/time"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="選擇時間"
            android:id="@+id/time_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:textColor="#1a1a1a"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/linearLayout_PeopleNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout_time"
        android:weightSum="1">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/people_icon"
            android:src="@drawable/passengernumber"
            android:layout_marginLeft="45dp" />
        <Spinner
            android:id="@+id/people_sp"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:spinnerMode="dropdown"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:background="@drawable/spinnerframe"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/linearLayout_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout_PeopleNumber">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/price_icon"
            android:src="@drawable/price"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:maxLength="4"
            android:id="@+id/price_et"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:hint="請輸入價錢"
            android:visibility="visible"
            android:background="@drawable/line2" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/priceunit_icon"
            android:src="@drawable/priceunit"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout_note"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout_bottom"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout_vehicle">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:id="@+id/note_icon"
            android:src="@drawable/note"
            android:layout_marginLeft="55dp" />
        <EditText
            android:layout_width="270dp"
            android:layout_height="110dp"
            android:id="@+id/note_et"
            android:textColor="#000000"
            android:layout_marginLeft="50dp"
            android:hint="請輸入備註，例：禁止飲食、禁止大型行李、請自備安全帽、回饋方式可議..."
            android:textColorHint="#808080"
            android:textSize="16sp"
            android:maxLength="60"
            android:inputType="textMultiLine"
            android:background="@drawable/notebg"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/linearLayout_vehicle"
        android:layout_below="@+id/linearLayout_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle_icon"
            android:src="@drawable/vehicle"
            android:layout_marginLeft="50dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:id="@+id/vehicle_rg">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/car_rb"
                android:checked="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:allowUndo="false"

                android:text="汽車"
                android:textSize="18sp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/motor_rb"
                android:checked="false"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:allowUndo="false"

                android:text="機車"
                android:textColor="#000000"
                android:textSize="18sp"
                android:duplicateParentState="false" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linearLayout_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <ImageButton
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:id="@+id/delete_ib"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:visibility="visible"
            android:cropToPadding="false"
            android:background="#00d72f86"
            android:src="@drawable/clean"
            android:scaleType="centerCrop" />
        <ImageButton
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:id="@+id/send_ib"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:visibility="visible"
            android:onClick="onSendClick"
            android:background="#00e61212"
            android:src="@drawable/send2"
            android:scaleType="centerCrop" />
    </LinearLayout>
</RelativeLayout>